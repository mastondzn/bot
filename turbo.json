{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "build": {
            "outputs": ["dist/**", ".next/**"],
            "dependsOn": ["^build", "^db:generate"]
        },
        "@synopsis/website#build": {
            "outputs": ["dist/**", ".next/**"],
            "dependsOn": ["^build", "^db:generate"],
            "env": [
                "NEXT_PUBLIC_TWITCH_CLIENT_ID",
                "NEXT_PUBLIC_TWITCH_BOT_USERNAME",
                "NEXT_PUBLIC_TWITCH_BOT_ID",
                "NEXT_PUBLIC_DOMAIN_NAME"
            ]
        },
        "dev": {
            "dependsOn": ["^build", "^db:generate"],
            "cache": false
        },
        "start": {
            "dependsOn": ["^build", "^db:generate"],
            "cache": false
        },
        "lint": {
            "dependsOn": ["^build", "^db:generate"]
        },
        "lint:fix": {
            "dependsOn": ["^build", "^db:generate"]
        },
        "typecheck": {
            "dependsOn": ["build", "^build", "^db:generate"]
        },
        "db:migrate": {
            "outputs": ["migrations/**"],
            "dependsOn": ["^build"],
            "cache": false
        },
        "db:check": {
            "cache": false
        },
        "db:generate": {
            "cache": false
        }
    },
    "globalDependencies": ["./packages/eslint-config", "./packages/tsconfig"],
    "globalEnv": [
        "PORT",
        "NODE_ENV",
        "TWITCH_CLIENT_ID",
        "TWITCH_CLIENT_SECRET",
        "TWITCH_BOT_USERNAME",
        "TWITCH_BOT_ID",
        "TWITCH_BOT_OWNER_USERNAME",
        "TWITCH_BOT_OWNER_ID",
        "DB_HOST",
        "DB_USERNAME",
        "DB_PASSWORD",
        "DB_NAME",
        "REDIS_HOST",
        "REDIS_PASSWORD",
        "APP_SECRET",
        "DOMAIN_NAME"
    ]
}
