{
    "name": "@synopsis/db",
    "version": "0.0.1",
    "private": true,
    "main": "src/index.ts",
    "scripts": {
        "generate": "drizzle-kit generate:pg --config=drizzle.config.ts",
        "check": "drizzle-kit check:pg --config=drizzle.config.ts",
        "drop": "drizzle-kit drop --config=drizzle.config.ts",
        "migrate": "tsx -r tsconfig-paths/register scripts/migrate.ts",
        "db:generate": "pnpm generate",
        "db:check": "pnpm check",
        "db:migrate": "pnpm migrate",
        "db:drop": "pnpm migrate",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "@synopsis/eslint-config": "0.0.1",
        "@synopsis/tsconfig": "0.0.1",
        "@types/node": "18.16.16",
        "drizzle-kit": "0.18.1",
        "eslint": "8.41.0",
        "eslint-define-config": "1.20.0",
        "tsconfig-paths": "4.2.0",
        "tsx": "3.12.7"
    },
    "dependencies": {
        "@synopsis/env": "0.0.1",
        "drizzle-orm": "0.26.1",
        "postgres": "3.3.4"
    }
}
