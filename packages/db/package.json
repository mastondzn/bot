{
    "name": "@synopsis/db",
    "version": "0.0.1",
    "private": true,
    "main": "src/index.ts",
    "scripts": {
        "generate": "pnpm with-env prisma generate",
        "push": "pnpm with-env prisma db push --skip-generate",
        "db:generate": "pnpm generate",
        "db:push": "pnpm push",
        "dev": "pnpm with-env prisma studio --port 5556",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "typecheck": "tsc --noEmit",
        "with-env": "dotenv -e ../../.env --"
    },
    "devDependencies": {
        "@synopsis/eslint-config": "0.0.1",
        "@synopsis/tsconfig": "0.0.1",
        "@types/node": "18.16.16",
        "dotenv-cli": "7.2.1",
        "eslint": "8.42.0",
        "eslint-define-config": "1.20.0",
        "prisma": "^4.15.0",
        "tsconfig-paths": "4.2.0",
        "tsx": "3.12.7"
    },
    "dependencies": {
        "@prisma/client": "4.15.0",
        "@synopsis/env": "0.0.1"
    }
}
