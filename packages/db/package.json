{
    "name": "@synopsis/db",
    "type": "module",
    "version": "0.0.1",
    "private": true,
    "main": "src/index.ts",
    "scripts": {
        "generate": "pnpm with-env drizzle-kit generate:pg --config=drizzle.config.ts",
        "check": "pnpm with-env drizzle-kit check:pg --config=drizzle.config.ts",
        "migrate": "pnpm with-env tsx scripts/migrate.ts",
        "drop": "pnpm with-env drizzle-kit drop --config=drizzle.config.ts",
        "db:generate": "pnpm generate",
        "db:check": "pnpm check",
        "db:migrate": "pnpm migrate",
        "db:drop": "pnpm migrate",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "typecheck": "tsc --noEmit",
        "with-env": "dotenv -e ../../.env --"
    },
    "dependencies": {
        "@synopsis/env": "0.0.1",
        "drizzle-orm": "0.29.3",
        "kysely": "0.27.2",
        "kysely-postgres-js": "2.0.0",
        "postgres": "3.4.0"
    },
    "devDependencies": {
        "@mastondzn/eslint": "0.6.9",
        "@synopsis/tsconfig": "0.0.1",
        "@types/node": "20.11.2",
        "dotenv-cli": "7.3.0",
        "drizzle-kit": "0.20.13",
        "eslint": "npm:eslint-ts-patch@8.56.0-0",
        "eslint-plugin-unicorn": "50.0.1",
        "eslint-ts-patch": "8.56.0-0",
        "is-docker": "3.0.0",
        "tsx": "4.7.0",
        "znv": "0.4.0"
    }
}
